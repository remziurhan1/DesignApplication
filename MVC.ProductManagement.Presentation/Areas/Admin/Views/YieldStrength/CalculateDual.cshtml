@model MVC.ProductManagement.Presentation.Areas.Admin.Models.YieldStrengthListVMs.YieldStrengthDualCalculateVM

<h2>Dual Yield Strength Calculation</h2>

<form asp-area="Admin" asp-controller="YieldStrength" asp-action="CalculateDual" method="post">
   
    <div class="form-group">
        <label for="MaterialFormId">Malzeme Formu</label>
        <select asp-for="MaterialFormId" asp-items="ViewBag.MaterialForms" class="form-select"></select>
    </div>

    <div class="form-group">
        <label asp-for="Temperature"></label>
        <input asp-for="Temperature" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThicknessShell">Shell Thickness</label>
        <input asp-for="ThicknessShell" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThicknessHead">Head Thickness</label>
        <input asp-for="ThicknessHead" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
